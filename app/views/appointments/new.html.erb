<h1>Create a New Appointment</h1>

<%= form_for(@appointment) do |f| %>
    <%= f.label :time %>
    <%= f.text_field :time  %><br>
    <br>

    <%= f.collection_select :trainer_id, Trainer.all, :id, :name, {:prompt => "Please Select a Trainer"} %>
    <%= f.collection_select :client_id, Client.all, :id, :name, {:prompt => "Please Select a Client"} %>

  
 <%= f.submit %>

<% end %>

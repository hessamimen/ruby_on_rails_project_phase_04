<h1>Add a New Client</h1>

<%=link_to "<< Client List", clients_path %>
<br>
<br>


<%= form_for(@client) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name  %><br>
    <br>
    <%= f.label :gender %>
    <%= f.text_field :gender  %><br>

   <h3>Address</h3>
  <%= f.fields_for :addresses do |addr| %>

    <%= addr.label :city %>
    <%= addr.text_field :city %><br>

    <%= addr.label :state %>
    <%= addr.text_field :state %><br>

    <%= addr.label :post_code %>
    <%= addr.text_field :post_code %><br>

  <% end %>
 
 <%= f.submit %>
<% end %>


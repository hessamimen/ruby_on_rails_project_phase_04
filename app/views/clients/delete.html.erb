<%= link_to "<< Back to List", clients_path %>

<div>
  <h2>Delete Client</h2>
  <%= form_for(@client, :method => 'delete') do |f| %>
    <p>Are you sure you want to permanently delete " <%= @client.name %> "?</p>
    <p>All these appointments will be removed:</p>
    <% @client.appointments.each do |appt| %>
          <p> <%= appt.time%> </p>
          <%end%> 
    
    <div>
      <%= f.submit("Delete Client") %>
    </div>
  <% end %>
</div>